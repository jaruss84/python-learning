from random import randint

answer = randint(1, 20)

guess_as_str = input("Zgadnij liczbę: ")
guess = int(guess_as_str)
while answer != guess :
    if guess < answer :
        print("Za mała!")
    else:
        print("Za duża!")
    guess_as_str = input("Zgadnij liczbę: ")
    guess = int(guess_as_str)

print("Brawo!")
